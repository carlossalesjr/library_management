<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/com/work/api/view/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.work.users.controller.UserManagementController">
   <left>
      <VBox prefWidth="450.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding><Insets bottom="20.0" left="20.0" right="10.0" top="20.0" /></padding>
         <children>
            <Label styleClass="header-label" text="All Users" />

            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                     <Label text="Sort by:" />
                     <ComboBox fx:id="sortComboBox" prefWidth="200.0" />
               </children>
               <padding>
                     <Insets bottom="10.0" top="5.0" />
               </padding>
            </HBox>
         </children>
         <children>
            <Label styleClass="header-label" text="All Users" />
            <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                  <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </left>
   <center>
      <VBox styleClass="form-pane" alignment="TOP_CENTER" prefWidth="350.0" spacing="20.0" BorderPane.alignment="CENTER">
         <padding><Insets bottom="20.0" left="10.0" right="20.0" top="20.0" /></padding>
         <children>
            <Label fx:id="formHeaderLabel" styleClass="header-label" text="Add New User" />
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <Label text="Name:" GridPane.rowIndex="0" />
                  <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Label text="Email:" GridPane.rowIndex="1" />
                  <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="saveButton" onAction="#handleSave" styleClass="save-button" text="Save" />
                  <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="delete-button" text="Delete" />
                  <Button fx:id="clearButton" onAction="#handleClear" text="New" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>