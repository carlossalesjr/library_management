<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/com/work/api/view/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.work.books.controller.BookManagementController">
   <left>
      <VBox prefWidth="450.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding><Insets bottom="20.0" left="20.0" right="10.0" top="20.0" /></padding>
         <children>
            <Label styleClass="header-label" text="All Books" />
            <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                  <TableColumn fx:id="authorColumn" prefWidth="150.0" text="Author" />
                  <TableColumn fx:id="isbnColumn" prefWidth="100.0" text="ISBN" />
                  <TableColumn fx:id="publishedYearColumn" prefWidth="75.0" text="Year" />
                  <TableColumn fx:id="availableCopiesColumn" prefWidth="75.0" text="Copies" />
               </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </left>
   <center>
      <VBox styleClass="form-pane" alignment="TOP_CENTER" prefWidth="350.0" spacing="15.0" BorderPane.alignment="CENTER">
         <padding><Insets bottom="20.0" left="10.0" right="20.0" top="20.0" /></padding>
         <children>
            <Label fx:id="formHeaderLabel" styleClass="header-label" text="Add New Book" />
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <Label text="Title:" GridPane.rowIndex="0" />
                  <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Label text="Author:" GridPane.rowIndex="1" />
                  <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="ISBN:" GridPane.rowIndex="2" />
                  <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Year:" GridPane.rowIndex="3" />
                  <TextField fx:id="publishedYearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Copies:" GridPane.rowIndex="4" />
                  <TextField fx:id="availableCopiesField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="saveButton" onAction="#handleSave" styleClass="save-button" text="Save" />
                  <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="delete-button" text="Delete" />
                  <Button fx:id="clearButton" onAction="#handleClear" text="New" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>