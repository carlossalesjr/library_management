<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@/com/work/api/view/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.work.loan.controller.LoanManagementController">
   <left>
      <VBox prefWidth="550.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
         </padding>
         <children>
            <Label styleClass="header-label" text="Loans Report" />
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="Filter by:" />
                  <RadioButton fx:id="activeFilterRadio" text="Active">
                     <toggleGroup>
                        <ToggleGroup fx:id="filterToggleGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="returnedFilterRadio" text="Returned" toggleGroup="$filterToggleGroup" />
                  <RadioButton fx:id="allFilterRadio" text="All" toggleGroup="$filterToggleGroup" />
               </children>
               <padding>
                  <Insets bottom="10.0" top="5.0" />
               </padding>
            </HBox>
            <TableView fx:id="loanTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="loanBookTitleColumn" prefWidth="220.0" text="Book Title" />
                  <TableColumn fx:id="loanUserNameColumn" prefWidth="130.0" text="User" />
                  <TableColumn fx:id="loanDateColumn" prefWidth="130.0" text="Loan Date" />
                  <TableColumn fx:id="statusColumn" prefWidth="70.0" text="Status" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Button fx:id="returnButton" onAction="#handleReturnBook" styleClass="delete-button" text="Return Selected Loan" maxWidth="Infinity" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox styleClass="form-pane" alignment="TOP_CENTER" prefWidth="350.0" spacing="20.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label styleClass="header-label" text="New Loan" />
            <GridPane hgap="10.0" vgap="15.0">
               <children>
                  <Label text="User:" GridPane.rowIndex="0" />
                  <ComboBox fx:id="userComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Label text="Book (Available):" GridPane.rowIndex="1" />
                  <ComboBox fx:id="bookComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="lendButton" onAction="#handleLendBook" styleClass="save-button" text="Lend Book" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>